@model IEnumerable<MovieReviewWebsite.Models.Person>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Actors&Directors</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            
            Name

        </th>
            
        <th>
            Role
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
           
            @Html.ActionLink(item.personName + " " + item.personSurname, "Details", "People", new { id = item.personID }, null)

        </td>
              
        
        <td>
            @Html.DisplayFor(modelItem => item.personRole)
        </td>
        <td>
            @if (ViewBag.UserId != null)
            {
                if (ViewBag.UserId == item.User)
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.personID })

                    @Html.ActionLink("Delete", "Delete", new { id = item.personID })
                }
            }
                </td>
    </tr>
}

</table>
