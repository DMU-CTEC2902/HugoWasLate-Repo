@model IEnumerable<MovieReviewWebsite.Models.Forum>

@{
    ViewBag.Title = "Forum";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Forum</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserID)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.Title)*@
            @Html.ActionLink(item.Title, "Details", new { id = item.PostID })

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>

        <td>
            @if (ViewBag.UserId != null)
            {
                if (ViewBag.UserId == item.UserID.ToString())
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.PostID })
                }
                if (ViewBag.UserId == "300fe04a-cd4f-4780-8963-fdc10b295bbd")
                {
                    @Html.ActionLink("Delete", "Delete", new { id = item.PostID })
                }

            }
        </td>
    </tr>
}

</table>
